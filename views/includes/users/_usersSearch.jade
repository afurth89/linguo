div(id='users-search')
  div(class='panel')
    div(class='panel-body')

      h1 Search Partners
      form(class='form-horizontal')
        div(class='form-group')
          label(for='languageInput' class='col-md-2 control-label') Language:
          div(class='col-md-10')
            select(id = "languageInput")
              option(selected="selected" disabled="disabled") Select a Language
              each language in languagesList
                option=language
        div(class='form-group')
          label(for='locationInput' class='col-md-2 control-label') Location:
          div(class='col-md-10')
            if (currentUser)
              input(type="text", class='form-control' value="#{currentUser.location}" name="" id = "locationInput")
            else
              input(type="text", class='form-control' name="" id = "locationInput")
        div(class='form-group text-center')
          input(type ="submit" class="btn btn-success" value = "SEARCH" id="search")
          

