div(class='edit-form')
	div(class='panel')
		div(class='edit-user')
			h3 Edit Profile Info
			form(action="/users/#{currentUser.id}/?_method=PUT" method='POST')
				div(class='form-group form-span')
					span
						label(for='gender') Gender: &nbsp;
						select(name="user[gender]" id='gender')
							option
							option(value = "Male") Male
							option(value = "Female") Female
					span
						label(for='ageInput') Age: &nbsp;
						input(type="number" class='form-control' name="user[age]" value="#{currentUser.age}" id="ageInput" size="6" min="18" max="99")
				div(class='form-group')
					label(for='locationInput') Location:
					input(type="text" class='form-control' name="user[location]" value = "#{currentUser.location}" id = "locationInput")
				div(class='form-group')
					label(for='imgInput') Avatar URL:
					input(type="text" class='form-control' name="user[img_url]" value = "#{currentUser.img_url}" id = "imgInput")
				div(class='form-group')
					label(for='descriptionInput') Description:
					textarea(type="text" class='form-control' name="user[description]" id = "descriptionInput") #{currentUser.description}
				div(class='form-group text-center')
					input(type="submit" class='btn btn-success btn-update' value = "Update My Info" id="update")
					form(action="/users/#{currentUser.id}?_method=delete" method="POST")
							&nbsp;
							input(type="submit" class='btn btn-danger btn-delete' value="Delete My Account")
	div(class='panel')
		div(class='edit-languages')
			h3 Edit Language Preferences
			form(action="/languages" class='form-horizontal' method="POST")
				div(class='form-group')
						label(for='languageProfile' class='col-md-3 control-label') Add a language:
						div(class='col-md-9')
							select(name="language[language]" id='languageProfile' required)
								option
								option(value = "Spanish") Spanish
								option(value = "English") English
				div(class='form-group')
						label(for='languageProfciency' class='col-md-3 control-label') Level of Proficiency:
						div(class='col-md-9')
							select(name="language[proficiency]" id='languageProfciency' required)
								option
								option 1
								option 2
								option 3
								option 4
								option 5
				div(class='form-group')
						label(for='languageApproach' class='col-md-3 control-label') Intent:
						div(class='col-md-9')
							select(name= "language[approach]" id='languageApproach' required)
								option
								option Learning
								option Teaching
				div(class='form-group')
						div(class='col-md-offset-3 col-md-3')
							input(type = "hidden" name= "language[user_id]" value = "#{currentUser.id}")
							input(type = "submit" class='btn btn-success btn-update' value = "Add to My Language Profile")   